  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run [Debug]",
      "type": "cppdbg",
      "request": "launch",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": true,
      "targetArchitecture": "x64",
      "MIMode": "lldb",
      "program": "",
      "windows": {
        "MIMode": "gdb",
        "program": "${workspaceFolder}/build/debug/win/rpg.exe"
      },
      "osx": {
        "program": "${workspaceFolder}/build/debug/osx/rpg",
      },
      "linux": {
        "program": "${workspaceFolder}/build/debug/linux/rpg",
      },
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": false
        }
      ],
      "preLaunchTask": "build debug"
    },
